<Window x:Class="DiaporamaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MinWidth="1200"
        MinHeight="800"
        Title="MainWindow" ResizeMode="NoResize" BorderThickness="0" WindowStyle="None" WindowState="Maximized" Background="Black">
    <Canvas x:Name="canvas">
        <Grid Width="{Binding ActualWidth, ElementName=canvas}">
            <Image Source="/Assets/logo.png" Width="100" HorizontalAlignment="Center" x:Name="chevron" Visibility="Hidden"/>
        </Grid>
        <Canvas.CacheMode>
            <BitmapCache/>
        </Canvas.CacheMode>
        <Canvas.Background>
            <ImageBrush ImageSource="/Assets/kraft.jpg" Stretch="Fill" >
            </ImageBrush>
        </Canvas.Background>
    </Canvas>
</Window>
